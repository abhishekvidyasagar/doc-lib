<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme" parent="Base.MyTheme" />

    <style name="Base.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <style name="MyTheme.Detail" parent="MyTheme" />
    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedAppBarTopic" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name = "NavigationTheme">
        <item name = "android:listDivider">@color/divider_drawer</item>
        <item name = "android:background">@color/white</item>
        <item name = "android:dividerHeight">1dp</item>
        <item name = "android:textSize">12sp</item>
        <item name = "android:textColor">#000000</item>
    </style>

    <style name="CustomTabStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabIndicatorColor">#000000</item>
        <item name="tabIndicatorHeight">5dp</item>
    </style>


    <style name="FacebookButtonStyle">
        <item name="android:padding">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:drawableStart">@drawable/ic_facebook</item>
        <item name="android:onClick">onClick</item>
        <item name="android:text">@string/text_facebook</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/round_facebook_button_style</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GooglePlusButtonStyle">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/round_google_button_style</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:drawableStart">@drawable/ic_icon_google</item>
        <item name="android:onClick">onClick</item>
        <item name="android:text">@string/text_google_plus</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PageControllerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/action_bar_bg</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolbarTitleLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/text_title</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ParentLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:fillViewport">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="NestedScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/myTextPrimaryColor</item>
    </style>

    <style name="EditOTPTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:digits">0123456789</item>
        <item name="android:textColor">@color/myTextPrimaryColor</item>
    </style>

    <style name="DrawableEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/myTextPrimaryColor</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/place_holder</item>
    </style>

    <style name="PHRLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#656565</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#e8ffde</item>
    </style>

    <style name="SegmentedButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/myTextSecondaryColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LinkButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/no_border</item>
    </style>

    <style name="ChatBoxLayoutFooterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LayoutDownloadStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/round_black_button_style</item>
    </style>

    <style name = "BookConsultationLabel">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginBottom">5dp</item>
        <item name = "android:layout_marginTop">15dp</item>
        <item name = "android:textColor">@color/text_dim_grey</item>
        <item name = "android:textSize">14sp</item>
    </style>

    <style name = "BookConsultationButtonIcon">
        <item name = "android:layout_width">16dp</item>
        <item name = "android:layout_height">20dp</item>
        <item name = "android:layout_centerVertical">true</item>
    </style>

    <style name = "BookConsultationButtonText">
        <item name = "android:textColor">@color/text_dim_black</item>
        <item name = "android:textSize">16sp</item>
    </style>

    <style name = "MyToolbarStyle" parent = "ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name = "android:textColorPrimary">#fff</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name = "android:textColorPrimaryInverse">#fff</item>
        <!-- Used to color the text of the action menu icons -->
        <item name = "android:textColorSecondary">#fff</item>
        <!-- Used to color the overflow menu icon -->
        <item name = "actionMenuTextColor">#fff</item>
    </style>


    <style name="Theme.AppCompat.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>


    <style name="OverrideMultipleImageSelectTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/OverrideCustomActionModeStyle</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="OverrideCustomActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="OverrideCustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
    </style>


    <style name="Widget.MaterialProgressBar.ProgressBar.Horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <!--
        Disabled for correct behavior on Android 4.x, see
        https://github.com/android/platform_frameworks_base/commit/911743652b597057a1bd7ef8a921e9ff8dce0f4a#diff-149f45c5ff2d3185bb79688ba17bc432L536
        <custom_adapter_item name="android:progressDrawable">@null</custom_adapter_item>
        -->
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding">
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@null</item>
        <!-- We have support for determinate circular progress drawable. -->
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar.NoPadding">
        <item name="android:minWidth">42dp</item>
        <item name="android:maxWidth">42dp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:maxHeight">42dp</item>
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar.Large">
        <item name="android:minWidth">76dp</item>
        <item name="android:maxWidth">76dp</item>
        <item name="android:minHeight">76dp</item>
        <item name="android:maxHeight">76dp</item>
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar.Large.NoPadding">
        <item name="android:minWidth">66.5dp</item>
        <item name="android:maxWidth">66.5dp</item>
        <item name="android:minHeight">66.5dp</item>
        <item name="android:maxHeight">66.5dp</item>
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar.Small">
        <item name="android:minWidth">16dp</item>
        <item name="android:maxWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar.Small.NoPadding">
        <item name="android:minWidth">14dp</item>
        <item name="android:maxWidth">14dp</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#40f56234</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/place_holder</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="NotEditable" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_background</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="SmallRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/grey_background</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="SampleCheckboxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/place_holder</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="SampleRadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/place_holder</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="radionbutton"
        parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton_drawable</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
       <!-- <item name="colorAccent">@color/colorPrimary</item>-->
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

</resources>