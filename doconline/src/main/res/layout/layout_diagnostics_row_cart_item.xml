<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgView_cartItem"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="4dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_diagnostics_bloodsugar_test"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgView_cartItem"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/btnsid">

                <TextView
                    android:id="@+id/tv_cartitem_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="Cart Item Name"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/tv_cartitem_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Price"
                    android:padding="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/btnsid"
                android:layout_alignParentRight="true">

                <Button
                    android:id="@+id/btn_cartitem_booknow"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/round_ui_button_style"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="BOOK NOW"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_cartitem_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/round_ui_button_style_red"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="DELETE"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="120dp"
                android:layout_marginStart="2600dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_begin="258dp"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>