<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_proceed_payment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="bottom" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/padding_15"
        android:layout_marginEnd="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editCouponCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:maxLength="500"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="@dimen/padding_5"
            android:imeOptions="actionDone"
            android:background="@drawable/rectangle_round_edges_grey_style"
            android:textColor="@color/myTextSecondaryColor"
            android:hint="Have a coupon code ?" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/padding_10"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/round_ui_button_style"
            android:text="Apply" />

    </LinearLayout>

</LinearLayout>
