<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="65dp"
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:baselineAligned="false"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp" >

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/myTextPrimaryColor"
                android:textSize="18sp"
                android:gravity="center"
                android:minWidth="40dp"
                android:text="24" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/myTextSecondaryColor"
                android:textSize="12sp"
                android:layout_below="@id/date"
                android:minWidth="40dp"
                android:gravity="center"
                android:text="MAY" />

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/myTextPrimaryColor"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:layout_marginTop="18dp"
                android:paddingEnd="0dp"
                android:maxLines="1"
                android:layout_toEndOf="@id/date"
                android:layout_alignBaseline="@id/date"
                android:text="Dr. Rohit Sanyal" />

            <TextView
                android:id="@+id/specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/myTextSecondaryColor"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:maxLines="1"
                android:layout_below="@id/doctor_name"
                android:layout_alignBaseline="@id/month"
                android:layout_toEndOf="@id/date"
                android:text="Endoscopy" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:background="@android:color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id = "@+id/patient_image"
                android:layout_width = "40dp"
                android:layout_height = "40dp"
                android:layout_gravity="center"
                android:src = "@drawable/ic_avatar"
                app:civ_border_color = "@color/white"
                app:civ_border_width = "1dp" />

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/myTextPrimaryColor"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"
                android:maxLines="1"
                android:paddingBottom="0dp"
                android:layout_toEndOf="@id/patient_image"
                android:text="Ashish" />

            <TextView
                android:id="@+id/patient_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/myTextPrimaryColor"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="3dp"
                android:paddingTop="5dp"
                android:paddingBottom="0dp"
                android:layout_toEndOf="@id/patient_name"
                android:text="M" />

            <TextView
                android:id="@+id/patient_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/myTextPrimaryColor"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="0dp"
                android:layout_toEndOf="@id/patient_gender"
                android:text="23" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/myTextSecondaryColor"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:layout_below="@id/patient_name"
                android:layout_toEndOf="@id/patient_image"
                android:text="10:15 AM" />

        </RelativeLayout>

        <!--<RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_rb"
            android:padding="5dp"
            />-->

    </LinearLayout>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layoutDirection="rtl"
        android:textAlignment="textStart"
        android:id="@+id/select_rb"/>

</androidx.cardview.widget.CardView>