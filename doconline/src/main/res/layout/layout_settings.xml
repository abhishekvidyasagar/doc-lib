<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_15"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Settings"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/myTextPrimaryColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MRN"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/myTextSecondaryColor" />

        <TextView
            android:id="@+id/tv_mrn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/myTextSecondaryColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_15"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/myTextSecondaryColor" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test@testuser.com"
                android:textSize="13sp"
                android:textColor="@color/myTextSecondaryColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnChangeEmail"
                style="@style/LinkButtonStyle"
                android:layout_height="25dp"
                android:layout_width="100dp"
                android:onClick="onClick"
                android:layout_gravity="top"
                android:gravity="end"
                android:visibility="visible"
                android:text="Add" />

            <TextView
                android:id="@+id/tv_email_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_gravity="end"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>

    </LinearLayout>

    <!--
    <TextView
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Settings"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/myTextPrimaryColor" />
     -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_5"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/myTextSecondaryColor" />

            <TextView
                android:id="@+id/tv_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000000000"
                android:textSize="13sp"
                android:textColor="@color/myTextSecondaryColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnChangeMobileNo"
                style="@style/LinkButtonStyle"
                android:layout_height="25dp"
                android:layout_width="100dp"
                android:onClick="onClick"
                android:layout_gravity="top"
                android:gravity="end"
                android:text="Change" />

            <TextView
                android:id="@+id/tv_mobile_no_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified"
                android:textSize="12sp"
                android:layout_gravity="end"
                android:textColor="?attr/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Membership"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/myTextPrimaryColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DocOnline Memberships"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/myTextSecondaryColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose from different DocOnline Memberships as per your convenience."
                android:textSize="12sp"
                android:textColor="@color/myTextSecondaryColor" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSubscriptionPlans"
            style="@style/LinkButtonStyle"
            android:layout_height="25dp"
            android:layout_width="120dp"
            android:onClick="onClick"
            android:layout_gravity="top"
            android:gravity="end"
            android:text="DocOnline Plans" />

    </LinearLayout>


    <TextView
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/myTextPrimaryColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/myTextSecondaryColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change your security password for account login."
                android:textSize="12sp"
                android:textColor="@color/myTextSecondaryColor" />

        </LinearLayout>

        <Button
            android:id="@+id/btnPasswordChange"
            style="@style/LinkButtonStyle"
            android:layout_height="25dp"
            android:layout_width="70dp"
            android:onClick="onClick"
            android:layout_gravity="top"
            android:gravity="end"
            android:text="Change" />

    </LinearLayout>

<!-- Address listing for Diagnostics-->
    <TextView
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Addresses"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/myTextPrimaryColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can add or edit address."
                android:textSize="12sp"
                android:textColor="@color/myTextSecondaryColor" />

        </LinearLayout>

        <Button
            android:id="@+id/btnChangeAddress"
            style="@style/LinkButtonStyle"
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:layout_gravity="top"
            android:gravity="end"
            android:text="Manage" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/padding_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Want to Sign out from DocOnline App?"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/myTextSecondaryColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This will help you to exit the DocOnline application."
                android:textSize="12sp"
                android:visibility="invisible"
                android:textColor="@color/myTextSecondaryColor" />

        </LinearLayout>

        <Button
            android:id="@+id/btnLogout"
            style="@style/LinkButtonStyle"
            android:layout_height="25dp"
            android:layout_width="70dp"
            android:onClick="onClick"
            android:layout_gravity="top"
            android:gravity="end"
            android:text="Sign Out" />

    </LinearLayout>

</LinearLayout>