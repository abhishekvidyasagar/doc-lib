<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    android:layout_margin="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="@android:color/white"
                android:textColor="@color/myTextPrimaryColor"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/ib_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_icon"
                android:visibility="invisible"
                android:background="@drawable/no_border"
                android:layout_gravity="center"
                android:padding="3dp"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:background="@drawable/ic_line_ver"/>

            <ImageButton
                android:id="@+id/ib_delete"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_grey"
                android:background="@drawable/no_border"
                android:layout_gravity="center"
                android:padding="3dp"
                android:contentDescription="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@color/myTextSecondaryColor"
                android:drawableStart="@drawable/ic_calender_icon"
                android:drawablePadding="5dp"
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:text="Date ~ N/A"
                android:maxLines="1"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:paddingStart="@dimen/padding_15"
                android:paddingEnd="@dimen/padding_15"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:id="@+id/tvToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@color/myTextSecondaryColor"
                android:drawableStart="@drawable/ic_calender_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="Date ~ N/A"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvIntakeTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@color/myTextSecondaryColor"
            android:drawableStart="@drawable/ic_clock_icon"
            android:drawablePadding="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:text="Intake Time ~ N/A"
            android:maxLines="1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/myTextSecondaryColor"
            android:text="Notes"
            android:layout_marginTop="@dimen/padding_5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvNoOfDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@color/myTextSecondaryColor"
            android:text="No of Days - "
            android:layout_marginTop="@dimen/padding_5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@color/myTextSecondaryColor"
            android:text="Status - "
            android:layout_marginTop="@dimen/padding_5"
            android:textSize="13sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>